{{ form_start(form) }}
    {{ form_widget(form) }}
        <input type="button" value="{{ 'Delete User' }}" class="btn btn-lg btn-block btn-danger" onclick="confirmDelete()" />
{{ form_end(form) }}

<script>
    
    function confirmDelete()
    {
        bootbox.confirm('Desea eliminar?', function(result) {
            if(result == true)
            {
                document.form.submit();
            }
        });
    }
</script>